<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7AF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/translateButton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#F6FBFF"
        android:fontFamily="sans-serif"
        android:forceHasOverlappingRendering="false"
        android:insetTop="0dp"
        android:text="@string/translate"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:visibility="visible"
        app:cornerRadius="200dp"
        app:iconTint="#9900FF"
        app:layout_constraintBottom_toTopOf="@+id/slangButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#9900FF"
        app:strokeColor="#E8C4FF"
        app:strokeWidth="?android:attr/scrollbarSize" />

    <Button
        android:id="@+id/slangButton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E8C4FF"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="sans-serif"
        android:text="@string/slang"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:visibility="visible"
        app:cornerRadius="200dp"
        app:layout_constraintBottom_toTopOf="@+id/continueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translateButton2"
        app:strokeColor="#F6FBFF"
        app:strokeWidth="?android:attr/scrollbarSize" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#F6FBFF"
        android:fontFamily="sans-serif"
        android:text="@string/Continue"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="visible"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slangButton2"
        app:strokeColor="#E8C4FF"
        app:strokeWidth="?android:attr/scrollbarSize" />
</androidx.constraintlayout.widget.ConstraintLayout>